<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="175dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:id="@+id/containerCar"
    android:background="@drawable/back_filter"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="1"
      android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/packageImage"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_gravity="center|top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/image1" />

    <Button
        android:id="@+id/packageState"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn4"
        android:fontFamily="@font/font_regular"
        android:gravity="center"

        android:padding="5dp"

        android:text="@string/UnAvalable"
        android:textColor="@color/white"

        android:textSize="13sp"

        android:visibility="visible" />
</FrameLayout>

      <TextView
          android:layout_width="match_parent"
          android:gravity="center"
          android:text="title"
          android:id="@+id/titlePackage"
          android:textSize="20sp"
          android:fontFamily="@font/font_regular"
          android:textColor="@color/colorPrimary"
          android:layout_height="wrap_content"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/visitPackage"
            android:layout_width="60dp"
            android:layout_height="25dp"
       android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
          android:background="@color/white"
            android:fontFamily="@font/font_regular"
            android:text="12"

            android:paddingLeft="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_local_shipping_black_24dp"

            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:gravity="right|center"
                android:text="5000 IQD"
                android:layout_marginRight="3dp"
                android:background="@drawable/back_text"
                android:id="@+id/pricePackage"
                android:drawableLeft="@drawable/ic_money"

                android:textSize="12sp"
                android:drawablePadding="3dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/font_bold"

                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/expire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_access_alarm_black_14dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/font_regular"
        android:gravity="right"
        android:layout_marginBottom="3dp"
        android:text="30 day"
        android:textColor="@color/darkgray"
        android:textSize="12sp" />
</LinearLayout>