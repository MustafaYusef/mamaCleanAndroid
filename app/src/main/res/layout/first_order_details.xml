<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_error_black_24dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"


            android:textColor="@color/darkgray"
            android:fontFamily="@font/font_bold"
            android:textSize="20dp"
            android:drawablePadding="5dp"

            android:text="@string/OrdersDetails"
            android:layoutDirection="locale"

            android:layout_height="40dp"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layoutDirection="ltr"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layoutDirection="ltr"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:paddingLeft="5dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_local_shipping_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/font_bold"
                        android:textSize="16dp"

                        android:text="@string/OrderState"
                        android:gravity="center"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/font_bold"
                        android:textSize="20dp"

                        android:text="50"
                        android:id="@+id/statusOrderDetails"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/darkgray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layoutDirection="ltr"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/ic_timer_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/darkgray"
                        android:fontFamily="@font/font_bold"
                        android:textSize="16dp"

                        android:text="@string/RecivAt"
                        android:gravity="center"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/font_bold"
                        android:textSize="20dp"
                        android:id="@+id/reciveDateOrder"
                        android:text="50"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_height="0.5dp"
        android:background="@color/darkgray"/>
</LinearLayout>